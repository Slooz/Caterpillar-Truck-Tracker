<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    tools:context=".SensorActivity"
    android:orientation="vertical"
    android:id="@+id/it"
    android:weightSum="1"
    android:textAlignment="center">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Speed Threshold"
        android:id="@+id/speedThreshLabel"
        android:layout_gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="10.0 m/s"
        android:id="@+id/speedThreshValue"
        android:layout_gravity="right" />

    <SeekBar
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:id="@+id/speedThreshSlider"
        android:layout_gravity="right"
        android:layout_marginBottom="10dp"
        android:max="100"
        android:progress="100" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Vibration Threshold"
        android:id="@+id/vibrationThreshLabel"
        android:layout_gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="10.0 m/s^2"
        android:id="@+id/vibrationThreshValue"
        android:layout_gravity="right" />

    <SeekBar
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:id="@+id/vibrationThreshSlider"
        android:layout_gravity="right"
        android:layout_marginBottom="10dp"
        android:max="100"
        android:progress="100" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="This tractor is currently"
        android:id="@+id/stateHeaderLabel"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="State_Name"
        android:id="@+id/stateValueLabel"
        android:layout_gravity="center_horizontal"
        android:textSize="45sp"
        android:textAlignment="center" />
</LinearLayout>

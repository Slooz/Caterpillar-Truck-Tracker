<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.bradley.cattrucktracker">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/launch_icon"
        android:label="CAT Truck Tracker"
        android:theme="@style/catStyle">

        <activity android:name="edu.bradley.cattrucktracker.TruckTrackerActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".TruckTrackerService" />

    </application>

</manifest>
